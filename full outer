SELECT
    COALESCE(t1.AgentID, t2.AgentID) AS AgentID,
    COALESCE(t1.Date, t2.Date) AS Date,
    t1.Amount AS Table1_Amount,
    t2.Amount AS Table2_Amount
FROM Table1 t1
FULL OUTER JOIN Table2 t2
    ON t1.AgentID = t2.AgentID AND t1.Date = t2.Date
WHERE
    t1.AgentID IS NULL OR
    t2.AgentID IS NULL OR
    (t1.Amount IS NULL AND t2.Amount IS NOT NULL) OR
    (t1.Amount IS NOT NULL AND t2.Amount IS NULL) OR
    (t1.Amount <> t2.Amount)
ORDER BY
    COALESCE(t1.AgentID, t2.AgentID),
    COALESCE(t1.Date, t2.Date);